    "@babel/preset-typescript": "^7.0.0-beta.56",
    "@babel/runtime": "^7.0.0-beta.56",
    "@types/base-x": "^3.0.0",
    "@types/bip39": "^2.4.2",
    "@types/bn.js": "^4.11.3",
    "@types/camelcase": "^4.1.0",
    "@types/fancy-log": "^1.3.0",
    "@types/glob": "^7.1.1",
